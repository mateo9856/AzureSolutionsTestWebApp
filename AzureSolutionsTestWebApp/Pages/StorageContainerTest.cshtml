@page
@model AzureSolutionsTestWebApp.Pages.StorageContainerTestModel
@{
}

@if (!string.IsNullOrEmpty(Model.ExceptionMessage))
{
    <h6 class="text-danger">@Model.ExceptionMessage</h6>
}
<form method="post" asp-page-handler="CreateController">
    <div class="form-group">
        <label>Account name:</label>
        <input class="form-control" type="text" asp-for="Model.AccountName" />
    </div>
    <div class="form-group">
        <label>Container name:</label>
        <input class="form-control" type="text" asp-for="Model.ContainerName" />
    </div>
    <input type="submit" class ="btn btn-primary" value="Add!"/>
</form>
<form method="post" asp-page-handler="RemoveController">
    <input type="hidden" asp-for="Model.AccountName" />
    <input type="hidden" form="Model.ContainerName" />
    <input type="submit" class="btn btn-danger" value="Remove!"/>
</form>

<h3>File uploader</h3>
<form method="post" asp-page-handler="Upload" enctype="multipart/form-data">
    <div class="form-group">
        <input type="file" asp-for="Model.UploadedFile" class ="form-control" />
    </div>
    <input type="submit" class="btn btn-primary" value="Upload!" />
</form>