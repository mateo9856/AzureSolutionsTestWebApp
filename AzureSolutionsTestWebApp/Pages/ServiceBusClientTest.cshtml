@page
@model AzureSolutionsTestWebApp.Pages.ServiceBusClientTestModel
@{
    ViewData["Title"] = "Service Bus Tester";
}

<div>
    Service Bus Test
</div>

<form method="post">
    <div class="form-group">
        <label>Connection string:</label>
        <input class="form-control" type="text" name="Model.ConnectionString" />
    </div>
    <div class="form-group">
        <label>Queue name:</label>
        <input class="form-control" type="text" name="Model.QueName" />
    </div>
    <div class="form-group">
        <label>Message:</label>
        <input class="form-control" type="text" name="Model.Message" />
    </div>
    <input type="submit" value="Create!" class="btn btn-primary"/>
</form>

<br />

<div>
    Service Bus Receiver
</div>
<form method="post" asp-page-handler="Receive">
    <div class="form-group">
        <label>Connection string:</label>
        <input class="form-control" type="text" name="Model.ConnectionString" />
    </div>
    <div class="form-group">
        <label>Queue name:</label>
        <input class="form-control" type="text" name="Model.QueName" />
    </div>
    <input type="submit" value="Start Receive!" class="btn btn-primary"/>
</form>
